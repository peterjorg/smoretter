{
    "version": "0.1.0",
    "command": "bash",
    "isShellCommand": true,
    "args": ["-c"],
    "tasks": [
        {
            "taskName": "Docker: List all containers",
            "args": [".vscode/dockerscript.sh listContainers"],
            "suppressTaskName": false
        },
         {
            "taskName": "Docker: List all images",
            "args": [".vscode/dockerscript.sh listImages"],
            "suppressTaskName": false
        },
        {
            "taskName": "Docker: Clean-up images and containers",
            "args": [".vscode/dockerscript.sh cleanupContainersAndImages"],
            "suppressTaskName": false
        },
        {
            "taskName": "Docker: Stop/delete all containers and images",
            "args": [".vscode/dockerscript.sh deleteContainersAndImages"],
            "suppressTaskName": false
        },
        {
            "taskName": "Docker: Build image",
            "args": [".vscode/dockerscript.sh buildImage"],
            "suppressTaskName": false
        },
        {
            "taskName": "Docker: Compose Dev environment",
            "args": [".vscode/dockerscript.sh compose"],
            "suppressTaskName": false
        },
        {
            "taskName": "Docker: Create Prod Environment and Deploy",
            "args": [".vscode/dockerscript.sh deployProd"],
            "suppressTaskName": false
        } 
   ]
}