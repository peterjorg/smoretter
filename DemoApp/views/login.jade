extends layout

block content
  h1= title
  .container
    .row
      .col-md4.col-md-offset-4 
        form.form-horizontal(method="post", id="loginForm", action="/login", content-type="application/json")
          label Username
          input.span3(type="text", name="username", placeholder="Enter your username")
          br 
          br
          label Password
          input.span3(type="password", name="password", placeholder="Enter your password")
          br
          br
          input.btn(type="submit", value="Log In")