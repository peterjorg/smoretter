extends layout

block content
  h1= title
  .container
    .row
      .col-md4.col-md-offset-4 
        form.form-horizontal(method="post", id="registerForm", action="/register", content-type="application/json")
          label First name
          input.span3(type="text", name="Firstname", placeholder="Enter your first name")
          br
          br
          label Last name
          input.span3(type="text", name="Lastname", placeholder="Enter your last name")
          br
          br
          label Email
          input.span3(type="text", name="Email", placeholder="Enter your email address")
          br
          br
          label Username
          input.span3(type="text", name="username", placeholder="Enter your username")
          br 
          br
          label Password
          input.span3(type="password", name="password", placeholder="Enter your password")
          br
          br
          input.btn(type="submit", value="Register")
          
      if info
        p #{info}